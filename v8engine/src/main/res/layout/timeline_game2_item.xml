<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="63.3dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/displayable_social_timeline_game_card_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="12.7dp"
                android:layout_marginStart="12.7dp"
                android:layout_marginTop="14dp"
                tools:ignore="contentDescription"
                />

            <TextView
                android:id="@+id/displayable_social_timeline_game_card_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="72dp"
                android:layout_marginTop="14.7dp"
                android:lines="1"
                tools:text="Aptoide Timeline Quiz"
                style="@style/Aptoide.TextView.Regular.S.Grey"
                />

            <TextView
                android:id="@+id/displayable_social_timeline_game_card_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/displayable_social_timeline_game_card_title"
                android:layout_marginEnd="48dp"
                android:layout_marginLeft="72dp"
                android:layout_marginRight="48dp"
                android:layout_marginStart="72dp"
                android:lines="1"
                tools:text="HÃ¡ duas horas"
                style="@style/Aptoide.TextView.Regular.XS.Grey"
                />

            <!--<ImageView-->
            <!--android:id="@+id/displayable_social_timeline_game_card_type_icon"-->
            <!--android:layout_width="15dp"-->
            <!--android:layout_height="15dp"-->
            <!--android:layout_alignEnd="@+id/card_custom_view_line_separator"-->
            <!--android:layout_alignRight="@+id/card_custom_view_line_separator"-->
            <!--android:layout_marginTop="@dimen/appstimeline_card_icon"-->
            <!--android:src="@drawable/appstimeline_recommendation_compass_icon"-->
            <!--/>-->
            <ImageView
                android:id="@+id/displayable_social_timeline_game_card_leaderboard_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toLeftOf="@id/displayable_social_timeline_game_card_leaderboard"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/appstimeline_card_icon"
                android:src="@drawable/appstimeline_recommendation_compass_icon"
                />

            <TextView
                android:id="@+id/displayable_social_timeline_game_card_leaderboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/card_custom_view_line_separator"
                android:layout_marginRight="3dp"
                android:layout_marginTop="18dp"
                android:text="#1234"
                style="@style/Aptoide.TextView.Regular.XS.Grey"
                />

            <ImageView
                android:id="@+id/displayable_social_timeline_game_card_score_icon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_toLeftOf="@id/displayable_social_timeline_game_card_score"
                android:layout_marginRight="5dp"
                android:layout_marginTop="@dimen/appstimeline_card_icon"
                android:src="@drawable/appstimeline_recommendation_compass_icon"
                />

            <TextView
                android:id="@+id/displayable_social_timeline_game_card_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/displayable_social_timeline_game_card_leaderboard_icon"
                android:layout_marginRight="5dp"
                android:layout_marginTop="18dp"
                android:text="2000"
                style="@style/Aptoide.TextView.Regular.XS.Grey"
                />

            <View
                android:id="@+id/card_custom_view_line_separator"
                android:layout_width="match_parent"
                android:layout_height="0.7dp"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="12dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginStart="12dp"
                android:background="@color/timeline_separator"
                />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/displayable_social_timeline_game_card_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/displayable_social_timeline_game_card_question2_noIcon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/game_card_question2_questionIcon"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:visibility="visible"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ic_launcher"/>

                <TextView
                    android:id="@+id/game_card_question2_question"
                    style="@style/Aptoide.TextView.Regular.S.Grey"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/game_card_question2_questionIcon"
                    android:layout_marginTop="10dp"
                    android:text="Testing question type 2" />



                <ImageView
                    android:id="@+id/game_card_question2_leftA_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/game_card_question2_question"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/game_card_question2_rightA_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/game_card_question2_question"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@mipmap/ic_launcher" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_below="@id/game_card_question2_question"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/appstimeline_game_swipe_icon" />

            </RelativeLayout>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="14dp"
            android:background="@color/timeline_separator"
            android:visibility="visible"
            />

        <include layout="@layout/social_bar_timeline"/>
    </LinearLayout>
</android.support.v7.widget.CardView>
