<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_game_card_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="14dp"
          tools:ignore="contentDescription"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:lines="1"
          tools:text="Aptoide Timeline Quiz"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_game_card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:lines="1"
          tools:text="HÃ¡ duas horas"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <!--<ImageView-->
      <!--android:id="@+id/displayable_social_timeline_game_card_type_icon"-->
      <!--android:layout_width="15dp"-->
      <!--android:layout_height="15dp"-->
      <!--android:layout_alignEnd="@+id/card_custom_view_line_separator"-->
      <!--android:layout_alignRight="@+id/card_custom_view_line_separator"-->
      <!--android:layout_marginTop="@dimen/appstimeline_card_icon"-->
      <!--android:src="@drawable/appstimeline_recommendation_compass_icon"-->
      <!--/>-->
      <ImageView
          android:id="@+id/displayable_social_timeline_game_card_leaderboard_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:layout_toLeftOf="@id/displayable_social_timeline_game_card_leaderboard"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <ProgressBar
          android:id="@+id/rank_progress"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_toRightOf="@id/displayable_social_timeline_game_card_leaderboard_icon"
          android:layout_marginLeft="7dp"
          android:layout_marginTop="15dp"
          android:visibility="visible"
          android:indeterminate="true" />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_leaderboard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_marginRight="3dp"
          android:layout_marginTop="18dp"
          android:text="#1234"
          android:visibility="invisible"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <ImageView
          android:id="@+id/displayable_social_timeline_game_card_score_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:layout_toLeftOf="@id/displayable_social_timeline_game_card_score"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_game_card_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:layout_marginTop="18dp"
          android:layout_toLeftOf="@id/displayable_social_timeline_game_card_leaderboard_icon"
          android:text="2000"
          android:visibility="invisible"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <ProgressBar
          android:id="@+id/score_progress"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_toLeftOf="@id/displayable_social_timeline_game_card_leaderboard_icon"
          android:layout_marginRight="7dp"
          android:layout_marginTop="15dp"
          android:visibility="visible"
          android:indeterminate="true" />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_game_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/displayable_social_timeline_game_card_question2_noIcon"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:orientation="vertical"
          android:visibility="visible"
          >

        <include layout="@layout/timeline_icon_question_body"
            android:id="@+id/icon_question"            android:visibility="visible"/>

        <include layout="@layout/timeline_question_body"
            android:id="@+id/question"
            android:visibility="gone"/>


        <ImageView
            android:id="@+id/game_card_question2_leftA_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="145dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="155dp"
            android:src="@drawable/game_arrow_left"
            />


        <ImageView
            android:id="@+id/game_card_question2_rightA_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="145dp"
            android:src="@mipmap/ic_launcher"
            />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:layout_marginTop="155dp"
            android:rotation="180"
            android:src="@drawable/game_arrow_left"
            />

        <ImageView
            android:id="@+id/swipe_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="145dp"
            android:src="@drawable/appstimeline_game_swipe_icon"
            android:visibility="gone"
            />

      </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="14dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />

    <include layout="@layout/social_bar_timeline" />
  </LinearLayout>
</android.support.v7.widget.CardView>
