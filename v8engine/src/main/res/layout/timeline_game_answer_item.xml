        <ProgressBar
            android:id="@+id/leaderboard_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/answer_message"
            android:layout_marginLeft="110dp"
            android:layout_toRightOf="@id/get_app_button"
            android:visibility="visible"
            android:indeterminate="true" />

        <include layout="@layout/timeline_game_answer_leaderboard_element"
            android:id="@+id/card_leaderboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/get_app_button"
            android:layout_below="@id/answer_status"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="60dp"
            android:visibility="invisible"
            />


        <Button
            android:id="@+id/expand_leaderboard"
            android:layout_width="110dp"
            android:layout_height="30dp"
            android:layout_below="@id/card_leaderboard"
            android:layout_toRightOf="@id/get_app_button"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="85dp"
            android:textSize="8dp"
            android:text="full leaderboard"
            android:visibility="invisible"
            style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"            />
