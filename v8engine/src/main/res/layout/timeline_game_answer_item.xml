<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="14dp"
          tools:ignore="contentDescription"
          tools:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:lines="1"
          tools:text="Aptoide Timeline Quiz"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_answer_card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:lines="1"
          tools:text="HÃ¡ duas horas"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:layout_toLeftOf="@+id/displayable_social_timeline_answer_card_leaderboard"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <TextView
          android:id="@id/displayable_social_timeline_answer_card_leaderboard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_marginRight="3dp"
          android:layout_marginTop="18dp"
          android:text="#1234"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          android:visibility="invisible"
          />

      <ProgressBar
          android:id="@+id/rank_progress"
          android:layout_width="10dp"
          android:layout_height="10dp"
          android:layout_toRightOf="@id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_marginLeft="5dp"
          android:layout_marginTop="18dp"
          />


      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:layout_marginTop="18dp"
          android:layout_toLeftOf="@+id/score_increment"
          android:text="2000"
          android:visibility="visible"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <TextView
          android:id="@id/score_increment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="5dp"
          android:layout_marginTop="18dp"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:text="(+1)"
          android:textColor="@color/green"
          android:visibility="visible"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_score_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_marginRight="3dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_score"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_game_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/displayable_social_timeline_game_answer_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:orientation="vertical"
          android:visibility="visible"
          >

        <ImageView
            android:id="@+id/get_app_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_below="@+id/answer_status"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"
            />

        <Button
            android:id="@+id/get_app_button"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_below="@+id/app_name"
            android:layout_toRightOf="@id/get_app_icon"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            tools:text="get app"
            style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
            />

        <TextView
            android:id="@+id/answer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Correct!"
            android:textColor="@color/green"
            style="@style/Aptoide.TextView.Medium.L.Black"
            />

        <TextView
            android:id="@+id/answer_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_status"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="The answer was:"
            android:visibility="visible"
            />

        <TextView
            android:id="@id/app_name"
            android:layout_width="110dp"
            android:layout_height="40dp"
            android:layout_below="@id/answer_status"
            android:layout_toRightOf="@id/get_app_icon"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Aptoide - App Store"
            android:textColor="@color/black"
            style="@style/Aptoide.TextView.Medium.M"
            />

        <ProgressBar
            android:id="@+id/leaderboard_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@id/get_app_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:indeterminate="true"
            android:visibility="invisible"
            />

        <include
            layout="@layout/timeline_game_answer_leaderboard_element"
            android:id="@+id/card_leaderboard"
            android:layout_width="310dp"
            android:layout_height="50dp"
            android:layout_below="@id/get_app_button"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:visibility="visible"
            />


        <!--<Button-->
        <!--android:id="@+id/expand_leaderboard"-->
        <!--android:layout_width="110dp"-->
        <!--android:layout_height="30dp"-->
        <!--android:layout_below="@id/card_leaderboard"-->
        <!--android:layout_toRightOf="@id/get_app_button"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_marginLeft="85dp"-->
        <!--android:textSize="8dp"-->
        <!--android:text="full leaderboard"-->
        <!--android:visibility="invisible"-->
        <!--style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"            />-->


      </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="0dp"
        android:background="@color/timeline_separator"
        android:visibility="visible"
        />

    <include layout="@layout/social_bar_timeline" />

  </LinearLayout>
</android.support.v7.widget.CardView>