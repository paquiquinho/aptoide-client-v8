<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    style="@style/Widget.Aptoide.Card"
    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63.3dp"
        android:orientation="horizontal"
        >

      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_icon"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginLeft="12.7dp"
          android:layout_marginStart="12.7dp"
          android:layout_marginTop="14dp"
          tools:ignore="contentDescription"
          tools:src="@mipmap/ic_launcher"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_title"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:layout_marginTop="14.7dp"
          android:lines="1"
          tools:text="Aptoide Timeline Quiz"
          style="@style/Aptoide.TextView.Regular.S.Grey"
          />

      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_subtitle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_below="@id/displayable_social_timeline_answer_card_title"
          android:layout_marginEnd="48dp"
          android:layout_marginLeft="72dp"
          android:layout_marginRight="48dp"
          android:layout_marginStart="72dp"
          android:lines="1"
          tools:text="HÃ¡ duas horas"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_toLeftOf="@+id/displayable_social_timeline_answer_card_leaderboard"
          android:layout_marginRight="5dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <TextView
          android:id="@id/displayable_social_timeline_answer_card_leaderboard"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignEnd="@+id/card_custom_view_line_separator"
          android:layout_marginRight="3dp"
          android:layout_marginTop="18dp"
          android:text="#1234"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <TextView
          android:id="@+id/displayable_social_timeline_answer_card_score"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_marginRight="35dp"
          android:layout_marginTop="18dp"
          android:visibility="invisible"
          android:text="2000"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />

      <ProgressBar
          android:id="@+id/score_progress"
          android:layout_width="20dp"
          android:layout_height="20dp"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_marginRight="35dp"
          android:layout_marginTop="15dp"
          android:visibility="visible"
          android:indeterminate="true" />

      <TextView
          android:id="@+id/score_increment"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_leaderboard_icon"
          android:layout_marginTop="18dp"
          android:layout_marginRight="5dp"
          android:text="(-15)"
          android:textColor="@color/green"
          style="@style/Aptoide.TextView.Regular.XS.Grey"
          />


      <ImageView
          android:id="@+id/displayable_social_timeline_answer_card_score_icon"
          android:layout_width="15dp"
          android:layout_height="15dp"
          android:layout_toLeftOf="@id/displayable_social_timeline_answer_card_score"
          android:layout_marginRight="3dp"
          android:layout_marginTop="@dimen/appstimeline_card_icon"
          android:src="@drawable/appstimeline_recommendation_compass_icon"
          />

      <View
          android:id="@+id/card_custom_view_line_separator"
          android:layout_width="match_parent"
          android:layout_height="0.7dp"
          android:layout_alignParentBottom="true"
          android:layout_marginEnd="12dp"
          android:layout_marginLeft="12dp"
          android:layout_marginRight="12dp"
          android:layout_marginStart="12dp"
          android:background="@color/timeline_separator"
          />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/displayable_social_timeline_game_card_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

      <RelativeLayout
          android:id="@+id/displayable_social_timeline_game_answer_card"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="true"
          android:layout_alignParentTop="true"
          android:orientation="vertical"
          android:visibility="visible"
          >

        <ImageView
            android:id="@+id/get_app_icon"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:src="@mipmap/ic_launcher"
            />

        <Button
            android:id="@+id/get_app_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/get_app_icon"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textSize="10sp"
            tools:text="get app"
            style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
            />

        <TextView
            android:id="@+id/answer_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/get_app_icon"
            android:textColor="@color/green"
            android:layout_marginLeft="110dp"
            android:layout_marginTop="25dp"
            style="@style/Aptoide.TextView.Medium.L.Black"
            android:text="Correct!"
            />

        <TextView
            android:id="@+id/answer_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_status"
            android:layout_toRightOf="@id/get_app_button"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="10dp"
            android:visibility="invisible"
            android:text="You're good at this!"
            />

        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/answer_message"
            android:layout_toRightOf="@id/get_app_button"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="95dp"
            android:text="Log in"
            android:visibility="gone"
            style="@style/Aptoide.Button.Ghost.ThinBlackAlpha"
            />


